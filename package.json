{
  "name": "itune-search-middleware-api",
  "version": "1.0.0",
  "description": "Middleware API to communicate with itune search",
  "main": "index.ts",
  "scripts": {
    "build": "tsc",
    "start": "ts-node-dev ./src/index.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:CI": "jest --silent --colors --ci --reporters=default --reporters=jest-junit"
  },
  "keywords": [
    "express"
  ],
  "author": "Royce Chua",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/node": "^16.11.10",
    "@types/jest": "^25.1.4",
    "@types/es6-promise": "^3.3.0",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "jest": "^25.2.4",
    "jest-junit": "^10.0.0",
    "response-time": "^2.3.2"
  },
  "jest": {
    "testEnvironment": "node",
    "clearMocks": true,
    "coverageReporters": [
      "text",
      "cobertura",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}
